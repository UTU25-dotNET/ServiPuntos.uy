<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ► PALETA ESTÁTICA -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!-- ► Recurso dinámico que cambia según el Tenant (valor por defecto igual al Primary) -->
    <Color x:Key="PrimaryColor">#512BD4</Color>

    <!-- ► ACCENT (valor literal, no StaticResource) -->
    <Color x:Key="Accent">#512BD4</Color>

    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="Text">#000000</Color>

    <!-- ► Tu escala de grises -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>

    <!-- ► Alias que usas en Styles.xaml -->
    <Color x:Key="GrayBackground">#E1E1E1</Color>

</ResourceDictionary>
