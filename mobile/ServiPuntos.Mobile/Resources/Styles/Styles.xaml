<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- ESTE es el tema principal que se debe referenciar en MainActivity -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personaliza tu tema aquí -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorAccent">@color/accent</item>
        <!-- Más personalizaciones si necesitas -->
    </style>

    <!-- El tema de splash también puede estar, pero MainTheme es el que debes usar -->
    <style name="Maui.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/maui_splash</item>
    </style>
</resources>
