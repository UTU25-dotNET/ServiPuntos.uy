<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

        <OnPlatform x:Key="PagePadding"
                        x:TypeArguments="Thickness">
                <On Platform="Android"
                                Value="16"/>
                <On Platform="iOS"
                                Value="16"/>
                <On Platform="MacCatalyst"
                                Value="16"/>
        </OnPlatform>
        <x:Double x:Key="DefaultSpacing">12</x:Double>
        <x:Double x:Key="DoubleSpacing">24</x:Double>
        <x:Double x:Key="SmallSpacing">6</x:Double>
        <x:Double x:Key="ExtraLargeFontSize">36</x:Double>

        <Style x:Key="CenteredIndicatorStyle"
                        TargetType="ActivityIndicator">
                <Setter Property="HorizontalOptions"
                                Value="Center"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle"
                        TargetType="Button">
                <Setter Property="FontFamily"
                                Value="OpenSansSemibold"/>
                <Setter Property="FontSize"
                                Value="16"/>
                <Setter Property="CornerRadius"
                                Value="8"/>
                <Setter Property="HeightRequest"
                                Value="50"/>
                <Setter Property="BackgroundColor"
                                Value="{DynamicResource PrimaryColor}"/>
                <Setter Property="TextColor"
                                Value="White"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle"
                        TargetType="Button"
                        BasedOn="{StaticResource PrimaryButtonStyle}">
                <Setter Property="BackgroundColor"
                                Value="#4285F4"/>
        </Style>
        <Style x:Key="PrimaryButton"
                        TargetType="Button"
                        BasedOn="{StaticResource PrimaryButtonStyle}"/>

        <Style x:Key="DefaultEntryStyle"
                        TargetType="Entry">
                <Setter Property="FontFamily"
                                Value="OpenSansRegular"/>
                <Setter Property="FontSize"
                                Value="14"/>
                <Setter Property="BackgroundColor"
                                Value="{StaticResource Gray100}"/>
                <Setter Property="PlaceholderColor"
                                Value="{StaticResource Gray500}"/>
                <Setter Property="HeightRequest"
                                Value="44"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="DefaultPickerStyle"
                        TargetType="Picker">
                <Setter Property="FontFamily"
                                Value="OpenSansRegular"/>
                <Setter Property="FontSize"
                                Value="14"/>
                <Setter Property="BackgroundColor"
                                Value="{StaticResource Gray100}"/>
                <Setter Property="TitleColor"
                                Value="{StaticResource Gray500}"/>
                <Setter Property="HeightRequest"
                                Value="44"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="ErrorLabelStyle"
                        TargetType="Label">
                <Setter Property="TextColor"
                                Value="Red"/>
                <Setter Property="FontSize"
                                Value="12"/>
                <Setter Property="HorizontalOptions"
                                Value="Center"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="LinkLabelStyle"
                        TargetType="Label">
                <Setter Property="FontFamily"
                                Value="OpenSansRegular"/>
                <Setter Property="FontSize"
                                Value="14"/>
                <Setter Property="TextColor"
                                Value="{DynamicResource PrimaryColor}"/>
                <Setter Property="TextDecorations"
                                Value="Underline"/>
                <Setter Property="HorizontalOptions"
                                Value="Center"/>
                <Setter Property="Margin"
                                Value="0,12,0,0"/>
        </Style>

        <Style x:Key="HeadlineLabelStyle"
                        TargetType="Label">
                <Setter Property="FontFamily"
                                Value="OpenSansSemibold"/>
                <Setter Property="FontSize"
                                Value="26"/>
                <Setter Property="HorizontalOptions"
                                Value="Center"/>
                <Setter Property="TextColor"
                                Value="{StaticResource Text}"/>
                <Setter Property="Margin"
                                Value="0,0,0,24"/>
        </Style>

        <Style x:Key="Body"
                        TargetType="Label">
                <Setter Property="FontFamily"
                                Value="OpenSansRegular"/>
                <Setter Property="FontSize"
                                Value="16"/>
                <Setter Property="TextColor"
                                Value="{StaticResource Text}"/>
        </Style>

        <Style x:Key="Caption"
                        TargetType="Label">
                <Setter Property="FontFamily"
                                Value="OpenSansRegular"/>
                <Setter Property="FontSize"
                                Value="12"/>
                <Setter Property="TextColor"
                                Value="{StaticResource Gray500}"/>
        </Style>

        <Style x:Key="DisplayPointsStyle"
                        TargetType="Label"
                        BasedOn="{StaticResource HeadlineLabelStyle}">
                <Setter Property="FontSize"
                                Value="{StaticResource ExtraLargeFontSize}"/>
        </Style>

        <Style x:Key="CardFrameStyle"
                        TargetType="Frame">
                <Setter Property="Margin"
                                Value="0,0,0,10"/>
        </Style>

        <Style TargetType="Frame">
                <Setter Property="CornerRadius"
                                Value="8"/>
                <Setter Property="Padding"
                                Value="12"/>
                <Setter Property="Margin"
                                Value="0,8"/>
                <Setter Property="BackgroundColor"
                                Value="{StaticResource Background}"/>
                <Setter Property="HasShadow"
                                Value="True"/>
        </Style>

        <Style TargetType="CollectionView">
                <Setter Property="Margin"
                                Value="12,8"/>
                <Setter Property="BackgroundColor"
                                Value="Transparent"/>
        </Style>

        <Style TargetType="Shell"
                        ApplyToDerivedTypes="True">
                <Setter Property="Shell.TabBarBackgroundColor"
                                Value="{StaticResource Background}"/>
                <Setter Property="Shell.TabBarForegroundColor"
                                Value="{StaticResource Gray500}"/>
                <Setter Property="Shell.TabBarTitleColor"
                                Value="{StaticResource Gray500}"/>
                <Setter Property="Shell.TabBarUnselectedColor"
                                Value="{StaticResource Gray200}"/>
        </Style>

        <Style TargetType="Page"
                        ApplyToDerivedTypes="True">
                <Setter Property="Padding"
                                Value="{StaticResource PagePadding}"/>
                <Setter Property="BackgroundColor"
                                Value="{StaticResource Background}"/>
        </Style>

</ResourceDictionary>
