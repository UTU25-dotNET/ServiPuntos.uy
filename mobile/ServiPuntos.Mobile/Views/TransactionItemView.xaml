<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ServiPuntos.Mobile.Views.TransactionItemView">

    <Frame Style="{StaticResource CardFrameStyle}">
        <StackLayout Spacing="{StaticResource SmallSpacing}">

            <Label
                Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                Style="{StaticResource HeadlineLabelStyle}"
                HorizontalOptions="Start"/>

            <Label
                Text="{Binding Tipo}"
                Style="{StaticResource Body}"/>

            <Label
                Text="{Binding Monto, StringFormat='Monto: {0:C}'}"
                Style="{StaticResource Body}"/>

            <Label
                Text="{Binding PuntosOtorgados, StringFormat='Puntos otorgados: {0}'}"
                Style="{StaticResource Body}"/>

            <Label
                Text="{Binding PuntosUtilizados, StringFormat='Puntos utilizados: {0}'}"
                Style="{StaticResource Body}"
                IsVisible="{Binding PuntosUtilizados, Converter={StaticResource GreaterThanZeroConverter}}"/>

            <!-- Si en el futuro queremos mostrar “detalles” de forma legible, podemos crear
                 un layout dedicado, pero NUNCA inyectar JSON crudo en un Label. -->

        </StackLayout>
    </Frame>
</ContentView>
