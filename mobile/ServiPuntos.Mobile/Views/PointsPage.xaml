<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        x:Class="ServiPuntos.Mobile.Views.PointsPage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        Title="Saldo de Puntos"
        BackgroundColor="{DynamicResource Background}">

        <ContentPage.Resources>
                <Style x:Key="TenantPointsStyle"
                       TargetType="Label"
                       BasedOn="{StaticResource DisplayPointsStyle}">
                        <Setter Property="TextColor"
                                        Value="{DynamicResource PrimaryColor}"/>
                </Style>
        </ContentPage.Resources>

        <StackLayout
                Padding="{StaticResource PagePadding}"
                Spacing="{StaticResource DefaultSpacing}"
                VerticalOptions="Center">

                <Label
                        Text="Tu saldo actual:"
                        Style="{StaticResource Body}"
                        HorizontalOptions="Center"/>

                <Label
                        Text="{Binding DisplayPoints}"
                        Style="{StaticResource TenantPointsStyle}"
                        HorizontalOptions="Center"/>

                <Button
                        Text="Actualizar"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>

                <ActivityIndicator
                        IsRunning="{Binding IsBusy}"
                        IsVisible="{Binding IsBusy}"
                        Style="{StaticResource CenteredIndicatorStyle}"/>

        </StackLayout>
</ContentPage>
