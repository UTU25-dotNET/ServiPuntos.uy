<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ServiPuntos.Mobile.Views.OfferItemView">

    <Frame
        Margin="10"
        Padding="12"
        CornerRadius="8"
        HasShadow="True">

        <StackLayout Spacing="{StaticResource SmallSpacing}">
            <Label
                Text="{Binding Titulo}"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>

            <Label
                Text="{Binding Descripcion}"
                Style="{StaticResource Body}"/>

            <Grid ColumnDefinitions="Auto,Auto"
                    RowDefinitions="Auto,Auto">
                <Label Grid.Row="0"
                        Grid.Column="0"
                       Text="{Binding PrecioEnPuntos, StringFormat='{0} pts'}"
                       Style="{StaticResource Caption}"
                       IsVisible="{Binding PrecioEnPuntos, Converter={StaticResource NullToBoolConverter}}"/>

                <Label Grid.Row="0"
                        Grid.Column="1"
                       Text="{Binding PrecioEnPesos, StringFormat='${0:F2}'}"
                       Style="{StaticResource Caption}"
                       Margin="12,0,0,0"
                       IsVisible="{Binding PrecioEnPesos, Converter={StaticResource NullToBoolConverter}}"/>

                <Label Grid.Row="1"
                        Grid.ColumnSpan="2"
                       Text="{Binding DescuentoEnPesos, StringFormat='Descuento: ${0:F2}'}"
                       Style="{StaticResource Caption}"
                       IsVisible="{Binding DescuentoEnPesos, Converter={StaticResource NullToBoolConverter}}"/>
            </Grid>
        </StackLayout>
    </Frame>
</ContentView>
