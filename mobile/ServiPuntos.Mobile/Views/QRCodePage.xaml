<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="ServiPuntos.Mobile.Views.QRCodePage"
        Title="Tu Código QR">

        <VerticalStackLayout
                Padding="20"
                Spacing="20"
                VerticalOptions="Center">

                <Label
                        Text="Tu código QR:"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"/>

                <Image
                        x:Name="QrImage"
                        WidthRequest="200"
                        HeightRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"/>
        </VerticalStackLayout>
</ContentPage>
