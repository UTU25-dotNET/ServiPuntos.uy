<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Historial de Canjes">
    <StackLayout Padding="18">
        <Label Text="Tus canjes recientes:"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,0,0,12"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"/>
        <CollectionView ItemsSource="{Binding Historial}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8"
                            CornerRadius="12"
                            Margin="0,0,0,8">
                        <StackLayout>
                            <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                    FontSize="12"/>
                            <Label Text="{Binding Producto}"
                                    FontSize="16"
                                    FontAttributes="Bold"/>
                            <Label Text="{Binding Ubicacion}"
                                    FontSize="13"/>
                            <Label Text="{Binding Puntos, StringFormat='Puntos: {0}'}"
                                    FontSize="14"/>
                            <Label Text="{Binding Estado}"
                                    FontSize="13"
                                    TextColor="#888"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
