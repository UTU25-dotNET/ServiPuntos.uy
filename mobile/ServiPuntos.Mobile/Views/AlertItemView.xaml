<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ServiPuntos.Mobile.Views.AlertItemView">

    <Frame Style="{StaticResource CardFrameStyle}">
        <StackLayout Spacing="{StaticResource SmallSpacing}">
            <Label
                Text="{Binding Titulo}"
                Style="{StaticResource HeadlineLabelStyle}"/>
            <Label
                Text="{Binding Mensaje}"
                Style="{StaticResource Body}"/>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <Label
                    Text="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy}'}"
                    Style="{StaticResource Caption}"
                    Grid.Column="0"/>
                <BoxView Grid.Column="1"/>
                <Label
                    Text="{Binding Leida, StringFormat='LeÃ­da: {0}'}"
                    Style="{StaticResource Caption}"
                    Grid.Column="2"/>
            </Grid>
        </StackLayout>
    </Frame>
</ContentView>
