<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <!-- Permitimos solo HTTPS y confiamos en los certificados del sistema y del usuario -->
  <base-config>
    <trust-anchors>
      <certificates src="system"/>
      <certificates src="user"/>
    </trust-anchors>
  </base-config>

  <!-- Configuración específica para el emulador Android (10.0.2.2) -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">10.0.2.2</domain>
  </domain-config>
</network-security-config>
