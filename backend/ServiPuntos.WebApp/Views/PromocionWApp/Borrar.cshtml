@model ServiPuntos.Core.Entities.Promocion
@{
    ViewData["Title"] = "Eliminar Promoción";
}
<h1>@ViewData["Title"]</h1>
<div class="alert alert-danger">
    <strong>¿Estás seguro que quieres eliminar esta promoción/oferta?</strong>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>
<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="fas fa-tag me-2"></i>
            @Model.Titulo
        </h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tipo:</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>
            <dt class="col-sm-3">Vigencia:</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToShortDateString() - @Model.FechaFin.ToShortDateString()</dd>
            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>
        </dl>
    </div>
</div>
<form asp-action="Borrar" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>
        Sí, Eliminar Definitivamente
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
