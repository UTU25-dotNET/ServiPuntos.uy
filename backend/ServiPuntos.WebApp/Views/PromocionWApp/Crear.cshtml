@model ServiPuntos.WebApp.Models.CreatePromocionViewModel
@using ServiPuntos.Core.Enums
@{
    ViewData["Title"] = "Crear Promoción u Oferta";
}
<div class="container">
    <h3 class="mb-4">@ViewData["Title"]</h3>
    <form asp-action="Crear" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Tipo" class="form-label">Tipo</label>
            <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoPromocion>()" id="Tipo">
                <option value="">Seleccione...</option>
            </select>
        </div>
        <div id="formFields" style="display:none;">
            <div class="mb-3">
                <label asp-for="Titulo" class="form-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="FechaInicio" class="form-label">Inicio</label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                </div>
                <div class="col">
                    <label asp-for="FechaFin" class="form-label">Fin</label>
                    <input asp-for="FechaFin" class="form-control" type="date" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col" id="precioPuntosField">
                    <label asp-for="PrecioEnPuntos" class="form-label">Precio Puntos</label>
                    <input asp-for="PrecioEnPuntos" class="form-control" type="number" />
                </div>
                <div class="col" id="descuentoField">
                    <label asp-for="DescuentoEnPuntos" class="form-label">Descuento %</label>
                    <input asp-for="DescuentoEnPuntos" class="form-control" type="number" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Ubicaciones</label>
                <div class="list-group" style="max-height: 250px; overflow-y: auto;">
                    @foreach (var u in (IEnumerable<ServiPuntos.Core.Entities.Ubicacion>)ViewBag.Ubicaciones)
                    {
                        <label class="list-group-item">
                            <input class="form-check-input me-1" type="checkbox" name="UbicacionIds" value="@u.Id" />
                            @u.Nombre
                        </label>
                    }
                </div>
                <div class="form-text">Dejar vacío para que sea global.</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Productos</label>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var p in (IEnumerable<ServiPuntos.Core.Entities.ProductoCanjeable>)ViewBag.Productos)
                    {
                        <div class="col">
                            <div class="card h-100 producto-card">
                                <img src="@(string.IsNullOrEmpty(p.FotoUrl) ? Url.Content("~/images/placeholder-logo.png") : p.FotoUrl)" class="card-img-top" style="height:150px; object-fit:cover;" />
                                <div class="card-body p-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="ProductoIds" id="prod-@p.Id" value="@p.Id" />
                                        <label class="form-check-label" for="prod-@p.Id">@p.Nombre</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleFields() {
            const tipo = document.getElementById("Tipo").value;
            const fields = document.getElementById("formFields");
            const descuento = document.getElementById("descuentoField");
            const precio = document.getElementById("precioPuntosField");
            if (!tipo) {
                fields.style.display = 'none';
                return;
            }
            fields.style.display = '';
            if (tipo === 'Promocion') {
                descuento.style.display = 'none';
                precio.style.display = '';
            } else if (tipo === 'Oferta') {
                precio.style.display = 'none';
                descuento.style.display = '';
            }
        }
        document.getElementById("Tipo").addEventListener('change', toggleFields);
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById("Tipo").selectedIndex = 0;
            toggleFields();

            document.querySelectorAll('input[name="ProductoIds"]').forEach(r => {
                r.addEventListener('change', () => {
                    document.querySelectorAll('.producto-card').forEach(c => c.classList.remove('border-primary'));
                    if (r.checked) {
                        r.closest('.producto-card').classList.add('border-primary');
                    }
                });
            });
        });
    </script>
}
