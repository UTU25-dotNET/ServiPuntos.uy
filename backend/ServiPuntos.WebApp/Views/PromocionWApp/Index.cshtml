@model IEnumerable<ServiPuntos.Core.Entities.Promocion>
@{
    ViewData["Title"] = "Promociones";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                    <div class="btn-group" role="group">
                        <a asp-action="CrearOferta" class="btn btn-primary"><i class="fas fa-plus"></i> Nueva Oferta</a>
                        <a asp-action="CrearPromocion" class="btn btn-secondary"><i class="fas fa-plus"></i> Nueva Promoción</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Título</th>
                                    <th>Tipo</th>
                                    <th>Vigencia</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.Titulo</td>
                                        <td>@p.Tipo</td>
                                        <td>@p.FechaInicio.ToShortDateString() - @p.FechaFin.ToShortDateString()</td>
                                        <td>
                                            <a asp-action="Editar" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm"><i class="fas fa-edit"></i></a>
                                            <a asp-action="Borrar" asp-route-id="@p.Id" class="btn btn-outline-danger btn-sm ms-1"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5 text-muted">No hay promociones registradas.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>