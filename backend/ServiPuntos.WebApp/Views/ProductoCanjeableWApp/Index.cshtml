@model ServiPuntos.WebApp.Models.ProductosCanjeablesIndexViewModel
@{
    ViewData["Title"] = "Productos Canjeables";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-gift mr-2"></i>
                        Gestión de Productos Canjeables
                    </h3>
                    <a href="@Url.Action("Crear")" class="btn btn-primary">
                        <i class="fas fa-plus mr-1"></i>
                        Nuevo Producto
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle mr-2"></i>
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (Model.Productos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Costo en Puntos</th>
                                        <th>Ubicaciones Asignadas</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in Model.Productos)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@producto.Nombre</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(producto.Descripcion))
                                                {
                                                    <span class="text-muted">@producto.Descripcion</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted font-italic">Sin descripción</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-info badge-pill">
                                                    @producto.CostoEnPuntos pts
                                                </span>
                                            </td>
                                            <td>
                                                @if (producto.DisponibilidadesPorUbicacion?.Any() == true)
                                                {
                                                    <span class="badge badge-success">
                                                        @producto.DisponibilidadesPorUbicacion.Count ubicaciones
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Sin asignar</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = producto.Id })"
                                                       class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Editar", new { id = producto.Id })"
                                                       class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("AsignarUbicacion", new { id = producto.Id })"
                                                       class="btn btn-sm btn-outline-success" title="Asignar a ubicaciones">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            data-toggle="modal" data-target="#deleteModal"
                                                            data-id="@producto.Id" data-name="@producto.Nombre"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-gift fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay productos canjeables registrados</h5>
                            <p class="text-muted">Comience creando su primer producto canjeable.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus mr-1"></i>
                                Crear Primer Producto
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Ubicaciones.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i class="fas fa-store mr-2"></i>
                            Gestión de Stock por Ubicación
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var ubicacion in Model.Ubicaciones)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-left-primary">
                                        <div class="card-body">
                                            <h6 class="card-title">@ubicacion.Nombre</h6>
                                            <p class="card-text text-muted small">
                                                @ubicacion.Direccion, @ubicacion.Ciudad
                                            </p>
                                            <a href="@Url.Action("GestionarStock", new { ubicacionId = ubicacion.Id })"
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-boxes mr-1"></i>
                                                Gestionar Stock
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar el producto <strong id="productName"></strong>?</p>
                <p class="text-warning">
                    <i class="fas fa-exclamation-triangle mr-1"></i>
                    Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <form method="post" style="display: inline;">
                    <input type="hidden" name="id" id="deleteId" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" formaction="@Url.Action("Delete")">
                        <i class="fas fa-trash mr-1"></i>
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var productId = button.data('id');
            var productName = button.data('name');

            var modal = $(this);
            modal.find('#productName').text(productName);
            modal.find('#deleteId').val(productId);
        });
    </script>
}