@model ServiPuntos.Core.Entities.ProductoUbicacion
@{
    ViewData["Title"] = "Detalles del Producto en Ubicación";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Ubicación:</dt>
                        <dd class="col-sm-8">@Model.Ubicacion?.Nombre</dd>

                        <dt class="col-sm-4">Producto:</dt>
                        <dd class="col-sm-8">@Model.ProductoCanjeable?.Nombre</dd>

                        <dt class="col-sm-4">Costo en Puntos:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ProductoCanjeable?.CostoEnPuntos puntos</span>
                        </dd>

                        <dt class="col-sm-4">Precio:</dt>
                        <dd class="col-sm-8">$@Model.Precio.ToString("F2")</dd>

                        <dt class="col-sm-4">Stock Disponible:</dt>
                        <dd class="col-sm-8">@Model.StockDisponible</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Activo ? "bg-success" : "bg-secondary")">
                                @(Model.Activo ? "Activo" : "Inactivo")
                            </span>
                         </dd>

                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8"><code>@Model.Id</code></dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>