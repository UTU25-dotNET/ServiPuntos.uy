@model ServiPuntos.Core.Entities.ProductoUbicacion
@{
    ViewData["Title"] = "Detalles del Producto en Ubicación";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Ubicación:</strong></div>
                        <div class="col-md-8">@Model.Ubicacion?.Nombre</div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Producto:</strong></div>
                        <div class="col-md-8">@Model.ProductoCanjeable?.Nombre</div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Costo en Puntos:</strong></div>
                        <div class="col-md-8">
                            <span class="badge bg-info">@Model.ProductoCanjeable?.CostoEnPuntos puntos</span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Stock Disponible:</strong></div>
                        <div class="col-md-8">@Model.StockDisponible</div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Estado:</strong></div>
                        <div class="col-md-8">
                            <span class="badge @(Model.Activo ? "bg-success" : "bg-secondary")">
                                @(Model.Activo ? "Activo" : "Inactivo")
                            </span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>ID:</strong></div>
                        <div class="col-md-8"><code>@Model.Id</code></div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>