<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiPuntos.WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiPuntos.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    
    <!-- CSS adicional para modo oscuro -->
    <style>
        /* Debug: Asegurar que el toggle sea visible */
        .dark-mode-toggle {
            border: 1px solid rgba(0,0,0,0.1);
            border-radius: 50px;
            padding: 2px;
        }
        
        /* Forzar estilos críticos */
        body.dark-mode {
            background-color: #1a1a1a !important;
            color: #e9ecef !important;
        }
        
        body.dark-mode .navbar {
            background-color: #2d2d2d !important;
        }
        
        body.dark-mode .navbar-brand,
        body.dark-mode .nav-link,
        body.dark-mode .text-dark {
            color: #e9ecef !important;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ServiPuntos.WebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DashboardWApp" asp-action="Index">
                                    Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <!-- Dark Mode Toggle -->
                        <li class="nav-item d-flex align-items-center me-3">
                            <div class="dark-mode-toggle">
                                <input type="checkbox" id="darkModeToggle" class="dark-mode-checkbox">
                                <label for="darkModeToggle" class="dark-mode-label">
                                    <i class="fas fa-sun sun-icon"></i>
                                    <i class="fas fa-moon moon-icon"></i>
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm my-2 my-sm-0" href="@Url.Action("Login", "AccountWApp")">
                                    <i class="fas fa-sign-in-alt"></i> Iniciar sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="text-dark">Hola, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm my-2 my-sm-0" style="color: #dc3545;"
                                    href="@Url.Action("Logout", "AccountWApp")">
                                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ServiPuntos.WebApp - Tecnologo Informatico TSI .NET
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Dark Mode Script - Versión mejorada -->
    <script>
        // Dark Mode Functionality - Versión Mejorada
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🌙 Inicializando modo oscuro...');
            
            const darkModeToggle = document.getElementById('darkModeToggle');
            const body = document.body;
            
            if (!darkModeToggle) {
                console.error('❌ No se encontró el toggle de modo oscuro');
                return;
            }
            
            console.log('✅ Toggle encontrado');
            
            // Función para aplicar modo oscuro
            function applyDarkMode(isDark) {
                if (isDark) {
                    body.classList.add('dark-mode');
                    console.log('🌙 Modo oscuro activado');
                } else {
                    body.classList.remove('dark-mode');
                    console.log('☀️ Modo claro activado');
                }
            }
            
            // Función para guardar preferencia
            function saveThemePreference(isDark) {
                try {
                    localStorage.setItem('darkMode', isDark ? 'enabled' : 'disabled');
                    console.log('💾 Preferencia guardada:', isDark ? 'oscuro' : 'claro');
                } catch (e) {
                    console.warn('⚠️ No se pudo guardar la preferencia:', e);
                }
            }
            
            // Función para cargar preferencia guardada
            function loadThemePreference() {
                try {
                    const savedTheme = localStorage.getItem('darkMode');
                    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                    
                    console.log('📱 Preferencia del sistema:', prefersDark ? 'oscuro' : 'claro');
                    console.log('💾 Preferencia guardada:', savedTheme);
                    
                    // Prioridad: 1) Preferencia guardada, 2) Preferencia del sistema
                    if (savedTheme === 'enabled') {
                        return true;
                    } else if (savedTheme === 'disabled') {
                        return false;
                    } else {
                        return prefersDark;
                    }
                } catch (e) {
                    console.warn('⚠️ Error al cargar preferencias:', e);
                    return false;
                }
            }
            
            // Inicializar tema
            const shouldUseDarkMode = loadThemePreference();
            darkModeToggle.checked = shouldUseDarkMode;
            applyDarkMode(shouldUseDarkMode);
            
            // Event listener para el toggle
            darkModeToggle.addEventListener('change', function() {
                const isDark = this.checked;
                console.log('🔄 Toggle cambiado a:', isDark ? 'oscuro' : 'claro');
                
                applyDarkMode(isDark);
                saveThemePreference(isDark);
            });
            
            // Escuchar cambios en la preferencia del sistema
            if (window.matchMedia) {
                window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
                    // Solo aplicar si no hay preferencia manual guardada
                    const savedTheme = localStorage.getItem('darkMode');
                    if (!savedTheme) {
                        console.log('🔄 Cambio en preferencia del sistema:', e.matches ? 'oscuro' : 'claro');
                        darkModeToggle.checked = e.matches;
                        applyDarkMode(e.matches);
                    }
                });
            }
            
            console.log('🎉 Modo oscuro inicializado correctamente');
            
            // Debug: Mostrar estado actual
            setTimeout(() => {
                console.log('🔍 Estado actual:');
                console.log('  - Toggle checked:', darkModeToggle.checked);
                console.log('  - Body tiene dark-mode:', body.classList.contains('dark-mode'));
                console.log('  - Color de fondo computado:', getComputedStyle(body).backgroundColor);
            }, 100);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>